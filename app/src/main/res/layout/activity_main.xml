<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_white"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/bglong"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="100dp"
        android:paddingHorizontal="30dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/bismillah"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="50dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/home_menu"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:id="@+id/ramadanList"
                        android:gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/report"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:text="রমাদান রিপোর্ট"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/home_menu"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:id="@+id/montlyPlan"
                        android:gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/plan"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:text="মাসিক পরিকল্পনা"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/home_menu"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:id="@+id/dua"
                        android:gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/pray"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:text="প্রতিদিনের দোয়া"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/home_menu"
                        android:layout_width="0dp"
                        android:id="@+id/amarProttoy"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/confidence"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:text="আমার প্রত্যয়"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/home_menu"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:id="@+id/goal"
                        android:gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/goal"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:text="লক্ষ্য"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/home_menu"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:id="@+id/ramadanImportance"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/message"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:text="রমাদান প্ল্যানার"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/home_menu"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:id="@+id/at_a_glance"
                        android:gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/report_output"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:text="একনজরে রমাদান"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/home_menu"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:id="@+id/about_app"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/info"
                            android:layout_marginBottom="8dp"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:text="এ্যাপ সম্পর্কে"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:paddingHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:text="@string/importance_3"
                    style="@style/paragraph"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>