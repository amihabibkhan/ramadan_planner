<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:padding="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="70dp"
            android:id="@+id/custom_dialog_icon"
            android:src="@drawable/tips"
            android:layout_height="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="আজকের দিনের টিপস"
            android:paddingVertical="10dp"
            android:id="@+id/tv_custom_dialog_title"
            android:textAlignment="center"
            style="@style/heading_1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            style="@style/paragraph"
            android:id="@+id/tv_custom_dialog_details"
            android:text="ইফতারের পর তৈলাক্ত খাবার এবং সাহরিতে টক খাবার পরিহার করুন।"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:text="ইনশাআল্লাহ"
            android:id="@+id/btn_custom_dialog"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>