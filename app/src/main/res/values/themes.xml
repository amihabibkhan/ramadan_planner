<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RamadanPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky</item>
        <item name="colorPrimaryVariant">@color/sky</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/soft_dark</item>
        <item name="android:navigationBarColor">@color/soft_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/solaimani_lipi</item>
    </style>

    <style name="paragraph">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="dua">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="table_column_1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/soft_sky</item>
        <item name="android:paddingVertical">7dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="table_column_2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/sky</item>
        <item name="android:paddingVertical">7dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="table_column_3">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/sky</item>
        <item name="android:padding">7dp</item>
    </style>


    <style name="ramadanList">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/soft_sky</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ramadanList_2">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="heading_1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="checkList">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:buttonTint">@color/sky</item>
    </style>


</resources>